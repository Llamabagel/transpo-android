CREATE TABLE route (
    id TEXT NOT NULL PRIMARY KEY,
    short_name TEXT NOT NULL,
    long_name TEXT,
    type INTEGER As Integer NOT NULL,
    service_level TEXT NOT NULL,
    color TEXT NOT NULL
);

insert:
INSERT INTO route(id, short_name, long_name, type, service_level, color)
VALUES (?, ?, ?, ?, ?, ?);

deleteAll:
DELETE FROM route;

selectAll:
SELECT * FROM route;

getRoutes:
SELECT * FROM route WHERE short_name LIKE :name OR long_name LIKE :name LIMIT :limit;